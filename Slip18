 /*
 Q 2) Write a C program for the Implementation of Primâ€™s Minimum spanning tree algorithm. 
  */
  
  #include<stdio.h>
void prims(int a[20][20],int n)
{
	int e,i,j,u,v,min,mincost=0,visit[20]={0};
	visit[0]=1;
	for(e=0;e<=n-1;e++)
	{
		for(i=0,min=999;i<n;i++)
		{
			for(j=0;j<n;j++)
			{
				if(a[i][j]<min)
                {
                    if(visit[i]!=0)
                    {
					
		            	min=a[i][j];
	                	u=i;
	                	v=j;
				   }
			   }  
			}
		}
	  a[u][v]=a[v][u]=999;
      if(visit[u]==0 || visit[v]==0)
		{
			printf("\nEdge v%d:(%d,%d):%d",e+1,u+1,v+1,min);
	       mincost+=min;
	       visit[v]=1;
		}
	}
	printf("\nMincost=%d",mincost);
	
}
int main()
{
	
    int i,j,a[20][20],n;
    printf("Enter no of nodes:");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
    	for(j=0;j<n;j++)
    	{ 
    			scanf("%d",&a[i][j]);
			if(a[i][j]==0)
			{
				a[i][j]=999;
			}
		}
	}
	prims(a,n);
}
